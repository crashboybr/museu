{% extends '::front.html.twig' %}

{% block breadcrumb %}Sala de Imprensa{% endblock %}

{% block body -%}
    
            <!-- ROW 1 -->
            <div class="row margin-bottom-40">
                <div class="col-md-12 col-sm-12">

                    <h3>Not√≠cias</h3>
                    {% for noticia in noticias %}
                    <p>
                        <a href="{{ noticia.url }}" target="_blank">{{ noticia.title }}</a><br />
                        {{ noticia.midia }} - {{ noticia.date|date("d/m/Y") }}
                     </p>
                     {% endfor %}

                     <h3>Releases</h3>
                    {% for release in releases %}
                    <p>
                        <a href="{{ release.url }}" target="_blank">{{ release.title }}</a><br />
                        {{ release.midia }} - {{ release.date|date("d/m/Y") }}
                     </p>
                     {% endfor %}

                    <h3>Artigos</h3>
                    {% for artigo in artigos %}
                    <p>
                        <a href="{{ artigo.url }}" target="_blank">{{ artigo.title }}</a><br />
                        {{ artigo.midia }} - {{ artigo.date|date("d/m/Y") }} - {{ artigo.author }}
                     </p>
                     {% endfor %}


                   
                </div>  
            </div>       
    
    
{% endblock %}