{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
<div class="col-md-12" style="text-align:center;">
    <div class="margin-top-20">
        <ul class="pagination">
            {% if first is defined and current != first %}
                
                <li><a href="{{ path(route, query|merge({(pageParameterName): first})) }}" class="verMais">< primeira página</a></li>
                
            {% endif %}

            {% if previous is defined %}
                
                <li><a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" class="verMais">&lt;</a></li>
                
            {% endif %}

            {% for page in pagesInRange %}
                <li>
                {% if page != current %}
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}" class="verMais">{{ page }}</a>
                {% else %}
                    <span class="verMais">{{ page }}</span>
                {% endif %}
                </li>
            {% endfor %}

            {% if next is defined %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" class="verMais">&gt;</a>
                </li>
            {% endif %}

            {% if last is defined and current != last %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" class="verMais">última página ></a>
                </li>
            {% endif %}
        </ul>
    </div>
</div>
{% endif %}
