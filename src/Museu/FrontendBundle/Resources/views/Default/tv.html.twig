{% extends '::front.html.twig' %}



{% block body -%}
    <link href="/front/assets/css/pages/gallery.css" rel="stylesheet" />
    <div class="col-md-12" style="">
      <div class="col-md-12">
          <h2>TV MTC</h2>
      </div>
    
    {% for video in videos %}
        
        <div class="col-md-4 col-sm-4 gallery-item">
            <a data-rel="fancybox-button" href="{{ video.url }}" class="fancybox-button" target="_blank">

            <img alt="" src="http://img.youtube.com/vi/{{ video.url|slice(16,29)|trim }}/0.jpg" class="img-responsive">
            
            </a> 
            <p style="text-align: center;">{{ video.title }}</p>
        </div>
    {% endfor %}


    
</div>

    {{ knp_pagination_render(videos) }}

{% endblock %}