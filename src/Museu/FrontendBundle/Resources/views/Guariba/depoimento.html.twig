{% extends '::front.html.twig' %}


{% block body -%}
  
                {% embed 'MuseuFrontendBundle:Guariba:topo.html.twig' %} 
                {% endembed %}


                {% embed 'MuseuFrontendBundle:Guariba:menu.html.twig' %} 
                    {% block depoimento %}active{% endblock %} 
                {% endembed %}

                <div class="col-md-9">
                    <h2>Envie seu depoimento</h2>
                    <p>Preencha os campos abaixo para deixar seu depoimento.</p>
                    <div class="space20"></div>
                    <!-- BEGIN FORM-->
                    <form action="#" class="horizontal-form margin-bottom-40" role="form">
                        <div class="form-group">
                            <label class="control-label">Nome</label>
                            <div class="col-lg-12">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" >Email <span class="color-red">*</span></label>
                            <div class="col-lg-12">
                                <input type="text" class="form-control" >
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" >Depoimento</label>
                            <div class="col-lg-12">
                                <textarea class="form-control" rows="8"></textarea>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default theme-btn"><i class="icon-ok"></i> Enviar</button>
                    </form>
                    <!-- END FORM-->                  
                </div>            
            



{% endblock %}