          <h2>Linha do Tempo</h2>
      </div>

        <div id="linhaDoTempo" style="height: 100%; width: 3000px;overflow: auto;
            overflow-y: hidden;
            margin: 0 auto;
            white-space: nowrap">
          {% for year,tms in timelines %}
          <div style="float: left;">
            <h3><strong>{{ year }}</strong></h3>
            <ul>
              {% for month,tm in tms %}
              <li>
                <h2 style="margin-top: 0px;">{{ month|month }}</h2>
                <div class="gallery-item">
                    {% for timeline in tm %}
                      <div>
                          <a data-rel="fancybox-button" title="{{ timeline.desc }}" href="{{ asset(timeline.pic) }}" class="fancybox-button">
                          <img  style="width: 150px; height: 100px;" src="{{ asset(timeline.pic) }}" class="img-responsive">
                          <div class="zoomix"><i class="fa fa-search"></i></div>
                        </a> 
                        
                        <p style="text-align: center; margin-top: 10px;">{{ timeline.title }}</p>
                        <hr />
                      </div>
                    {% endfor %}
                </div>
              </li>
              {% endfor %}
              
            </ul>
          </div>
          {% endfor %}

        
      </div>
    </div>
  </div>

       
            



