<table class="table table-striped table-bordered table-advance table-hover">
    
    <tr>
        <th style="width: 150px;">Título</th>
        <td>{{ acervo.title }}</td>
    </tr>
    <tr>
        <th style="width: 150px;">Subtítulo</th>
        <td>{{ acervo.subtitle }}</td>
    </tr>
    <tr>
        <th>Coleção</th>
        <td>{{ acervo.category|capitalize }}</td>
    </tr>
    {% if acervo.vehicle %}
    <tr>
        <th>Veículo</th>
        <td>{{ acervo.vehicle }}</td>
    </tr>
    {% endif %}
    {% if acervo.program %}
    <tr>
        <th>Programa</th>
        <td>{{ acervo.program }}</td>
    </tr>
    {% endif %}
    {% if acervo.author %}
    <tr>    
        <th>Ilustrador</th>
        <td>{{ acervo.author }}</td>
    </tr>
    {% endif %}
    {% if acervo.cinegrafista %}
    <tr>    
        <th>Fotógrafo</th>
        <td>{{ acervo.cinegrafista }}</td>
    </tr>
    {% endif %}
    {% if acervo.supportPic %}
    <tr>    
        <th>Foto</th>
        <td>{{ acervo.supportPic }}</td>
    </tr>
    {% endif %}

    {% if acervo.sinopse %}
    <tr>    
        <th>Sinopse</th>
        <td>{{ acervo.sinopse }}</td>
    </tr>
    {% endif %}

    {% if acervo.genre %}
    <tr>    
        <th>Gênero</th>
        <td>{{ acervo.genre }}</td>
    </tr>
    {% endif %}

    {% if acervo.publisher %}
    <tr>    
        <th>Editora</th>
        <td>{{ acervo.publisher }}</td>
    </tr>
    {% endif %}

    {% if acervo.year %}
    <tr>    
        <th>Ano</th>
        <td>{{ acervo.year }}</td>
    </tr>
    {% endif %}

    {% if acervo.acervoDate %}
    <tr>    
        <th>Data</th>
        <td>{{ acervo.acervoDate|date('d/m/Y') }}</td>
    </tr>
    {% endif %}
    
    
    
    <tbody>
        
    </tbody>    
</table>

{% if acervo.url %}

        <a href="{{ acervo.url }}" target="_blank"><i class="fa fa-external-link"></i> Ir</a>
    </tr>
{% endif %}