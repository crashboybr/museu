{% extends '::front.html.twig' %}

{% block breadcrumb %}Acervo Digitais{% endblock %}

{% block body -%}
  



                {% embed 'MuseuFrontendBundle:Acervo:menu.html.twig' %} 
                    {% block depoimento %}active{% endblock %} 
                {% endembed %}

                <div class="col-md-9" style="margin-top: 90px;">
                    <h2>{{ option }}</h2>
                </div>            

                <div class="col-md-9">

                    <table class="table table-striped table-bordered table-advance table-hover">
        <thead>
            <tr>
                <th>Título</th>
                <th>Instituição / Veículo</th>
                <th>Data</th>
                <th>Autor</th>
                <th>Assunto</th>
                <th>Cidade</th>
            </tr>
        </thead>
        <tbody>
            {% for acervo in acervos %}
            <tr>
                <td>{{ acervo.title }}a</td>
                <td>{{ acervo.vehicle }}</td>
                <td>{{ acervo.createdAt|date('d/m/Y') }}</td>
                <td>{{ acervo.author }}</td>
                <td></td>
                <td></td>
            </tr>
            {% endfor %}

        </tbody>    
    </table>

                
                <div class="margin-top-20">
                  <ul class="pagination">
                    <li><a href="#">Prev</a></li>
