
{% extends '::front.html.twig' %}

{% block breadcrumb %}Acervos Digitais{% endblock %}

{% block css %}
<!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="/front/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="/back/assets/plugins/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css"/>
    <link href="/back/assets/plugins/jquery-validation/demo/css/reset.css" rel="stylesheet" type="text/css"/>
    <link href="/back/assets/css/style-metro.css" rel="stylesheet" type="text/css"/>
    <link href="/front/assets/css/style.css" rel="stylesheet" type="text/css"/>
    <link href="/front/assets/css/style-responsive.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="/front/assets/plugins/fancybox/source/jquery.fancybox.css">               
    <link href="/front/assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="/front/assets/plugins/bxslider/jquery.bxslider.css" />    
    <!-- END GLOBAL MANDATORY STYLES -->
    <link href="/front/assets/css/themes/blue.css" rel="stylesheet" type="text/css" id="style_color"/>    
    <link rel="shortcut icon" href="favicon.ico" />

{% endblock %}

{% block body -%}
<div class="row" style="margin-top: 10px;">
<!-- BEGIN CONTAINER -->   
    <div class="container min-hight">
        <!-- BEGIN PORTFOLIO ITEM -->
        <div class="row-fluid margin-bottom-30">
            <!-- BEGIN CAROUSEL -->            
            <div class="span5 front-carousel">
                <div id="myCarousel" class="carousel slide">
                    <!-- Carousel items -->
                    <div class="carousel-inner">
                        <div class="active item">
                            {% for pic in pics %}
                            {% if pic %}
                            <img src="http://museu.bernardoalves.com.br/{{ asset('images/acervo/' ~ pic|trim) }}" alt=""><br />
                            {% endif %}
                            {% endfor %}
                        </div>
                        
                    </div>
                   
                </div>                
            </div>
            <!-- END CAROUSEL -->                             

            <!-- BEGIN PORTFOLIO DESCRIPTION -->            
            <div class="span7">
               
                <table class="table table-striped table-bordered table-advance table-hover">
                        
                        <tr>
                            <th style="width: 150px;">Título</th>
                            <td>{{ acervo.title }}</td>
                        </tr>
                        <tr>
                            <th style="width: 150px;">Subtítulo</th>
                            <td>{{ acervo.subtitle }}</td>
                        </tr>
                        <tr>
                            <th>Coleção</th>
                            <td>{{ acervo.category|capitalize }}</td>
                        </tr>
                        {% if acervo.vehicle %}
                        <tr>
                            <th>Veículo / Instituição</th>
                            <td>{{ acervo.vehicle }}</td>
                        </tr>
                        {% endif %}
                        {% if acervo.program %}
                        <tr>
                            <th>Editoria / Programa</th>
                            <td>{{ acervo.program }}</td>
                        </tr>
                        {% endif %}
                        {% if acervo.author %}
                        <tr>    
                            <th>Autor(es)</th>
                            <td>{{ acervo.author }}</td>
                        </tr>
                        {% endif %}
                        {% if acervo.supportPicAuthor %}
                        <tr>    
                            <th>Autor Foto</th>
                            <td>{{ acervo.supportPicAuthor }}</td>
                        </tr>
                        {% endif %}
                        {% if acervo.supportPic %}
                        <tr>    
                            <th>Foto</th>
                            <td>{{ acervo.supportPic }}</td>
                        </tr>
                        {% endif %}
                        {% if acervo.acervoDate %}
                        <tr>    
                            <th>Data</th>
                            <td>{{ acervo.acervoDate|date('d/m/Y') }}</td>
                        </tr>
                        {% endif %}
                        {% if acervo.url %}
                        <tr>
                            <th>URL</th>
                            <td><a href="{{ acervo.url }}" target="_blank"><i class="fa fa-external-link"></i></a></td>
                        </tr>
                       {% endif %}

                       {% if acervo.filename %}
                        <tr>
                            <th>Ver</th>
                            <td><a href="/pdf/{{ acervo.filename }}" target="_blank">Texto</a></td>
                        </tr>
                        {% endif %}

                        
                    
                    <tbody>
                        
                    </tbody>    
                </table>
            

            
            <!-- END PORTFOLIO DESCRIPTION -->  
            {% if (acervo.body) %} 
            <h2>Corpo</h2>
            <hr>
            <p>{{ acervo.body|raw }}</p>    
            {% endif %}
            {% if (relateds) %} 
            <h2>Itens Relacionados</h2>
            <hr>
                {% for related in relateds %}
                    <p><a href="{{ path('museu_view_acervo', { 'id': related.acervoId }) }}">{{ related.title }}</a></p>
                {% endfor %} 
            {% endif %}
            </div>    
        </div>
        <!-- END PORTFOLIO ITEM -->
</div>
</div>


{% endblock %}