{% block body -%}
<script src="/front/assets/plugins/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="/front/assets/plugins/jquery-ui.js" type="text/javascript"></script>
<script src="/front/assets/plugins/datepicker-pt-BR.js" type="text/javascript"></script>
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css">

<style type="text/css">
