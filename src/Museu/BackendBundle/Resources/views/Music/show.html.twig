{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Music</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Composer</th>
                <td>{{ entity.composer }}</td>
            </tr>
            <tr>
                <th>Interpret</th>
                <td>{{ entity.interpret }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ entity.url }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('music') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('music_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
