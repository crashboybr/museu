{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Linha do Tempo</h1>

    <table class="table table-striped table-bordered table-advance table-hover">
        <thead>
            <tr>
                <th>Ano</th>
                <th>Mês</th>
                <th>Título</th>
                <th>Descrição</th>
                <th>Foto</th>
                <th style="width:130px;"></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.year }}</td>
                <td>{{ entity.month }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td><img src="{{ asset(entity.pic) }}" style="width: 150px;" /></td>
                
                <td>
                    <a class="btn default btn-xs green-stripe" href="{{ path('timeline_show', { 'id': entity.id }) }}">
                         Ver
                    </a>
                    <a class="btn default btn-xs green-stripe" href="{{ path('timeline_edit', { 'id': entity.id }) }}">
                         Editar
                    </a>
                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('timeline_new') }}">
        <button type="button" class="btn btn-default">Criar Nova</button>
    </a>
    {% endblock %}
