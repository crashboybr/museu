{% extends '::base.html.twig' %}

{% block body -%}


<div class="row-fluid">
	<div class="span12">
		<!-- BEGIN GENERAL PORTLET-->
		<div class="portlet">


			<div class="portlet-body form">

				{{ form_start(form, { 'attr': { 'class': 'form-horizontal', 'novalidate': 'novalidate' }}) }}

				<h3 class="form-section">Editar eBook</h3>
				<div class="control-group {% if (form.title.vars.errors|length > 0) %}error{% endif %}">

					{{ form_label(form.title, 'TÃ­tulo', { 'label_attr': {'class': 'control-label'} }) }}
					<div class="controls">


						{{ form_widget(form.title, { 'attr': { 'class': 'm-wrap large' }}) }}
						{% if (form.title.vars.errors|length > 0) %}
						<span class="help-inline">{{ form.title.vars.errors[0].message }}</span>
						{% endif %}
					</div>
				</div>

				<div class="control-group {% if (form.file.vars.errors|length > 0) %}error{% endif %}">

					{{ form_label(form.file, 'Arquivo', { 'label_attr': {'class': 'control-label'} }) }}
