{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Exposições</h1>

    <table class="table table-striped table-bordered table-advance table-hover">
        <thead>
            <tr>
                <th>Título</th>
                <th>Sub Título</th>
                <th>Descrição</th>
                <th>Data</th>
                <th style="width:130px;">
                </th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td>{{ entity.title }}</td>
                <td class="hidden-xs">{{ entity.subtitle }}</td>
                <td style="width: 300px;">{{ entity.shortDescription }}</td>
                
                <td>{% if entity.date %}{{ entity.date|date('d/m/Y') }}{% endif %}</td>

                <td>
                    <a class="btn default btn-xs green-stripe" href="{{ path('exposicoes_show', { 'id': entity.id }) }}">
                         Ver
                    </a>
                    <a class="btn default btn-xs green-stripe" href="{{ path('exposicoes_edit', { 'id': entity.id }) }}">
                         Editar
                    </a>
                
                </td>
            </tr>
        {% endfor %}
        </tbody>    
    </table>

            <a href="{{ path('exposicoes_new') }}">
                <button type="button" class="btn btn-default">Criar Nova</button>
            </a>



    {% endblock %}
