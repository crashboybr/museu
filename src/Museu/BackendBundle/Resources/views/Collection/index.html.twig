{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Acervos</h1>

    <table class="table table-striped table-bordered table-advance table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                
                <th>Coleção</th>

                <th style="width:130px;"></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('collection_show', { 'id': entity.id }) }}">{{ entity.acervoId }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.category }}</td>

                <td>
                    <a class="btn default btn-xs green-stripe" target="_blank" href="{{ path('museu_view_acervo', { 'id': entity.acervoId }) }}">
                         Ver
                    </a>
                    <a class="btn default btn-xs green-stripe" href="{{ path('collection_edit', { 'id': entity.id }) }}">
                         Editar
                    </a>
                
                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('collection_new') }}">
        <button type="button" class="btn btn-default">Criar Nova</button>
    </a>
    {% endblock %}
