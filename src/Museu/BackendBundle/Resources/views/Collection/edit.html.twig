		{% endif %}
	});

	function mudaCategoria() {
		$("#div_statement_category").hide();
		$("#div_livros").hide();
		if ($("#museu_backendbundle_collection_category").val() == 'depoimentos') {
			$("#div_statement_category").show();
		} else if ($("#museu_backendbundle_collection_category").val() == 'livros') {
			$("#div_livros").show();
		}
	 }
