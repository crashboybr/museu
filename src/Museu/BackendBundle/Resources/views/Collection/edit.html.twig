<script type="text/javascript">
	$(document).ready(function() {
		$("#museu_backendbundle_collection_category").val("{{ form.vars.value.category }}");
		{% if form.vars.value.category != 'depoimentos' %}
			$("#div_statement_category").hide();
		{% endif %}
		{% if form.vars.value.category  == 'livros' %}
