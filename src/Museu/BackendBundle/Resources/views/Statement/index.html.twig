{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Statement list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Function</th>
                <th>Text</th>
                <th>Type</th>
                <th>Pic</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('statement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.function }}</td>
                <td>{{ entity.text }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.pic }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('statement_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('statement_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('statement_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
