{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Depoimentos</h1>

    <table class="table table-striped table-bordered table-advance table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>URL</th>
                <th>Tipo</th>
                <th style="width:130px;"></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.type }}</td>
                <td>
                    <a class="btn default btn-xs green-stripe" href="{{ path('statement_show', { 'id': entity.id }) }}">
                         Ver
                    </a>
                    <a class="btn default btn-xs green-stripe" href="{{ path('statement_edit', { 'id': entity.id }) }}">
                         Editar
                    </a>
                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     <a href="{{ path('statement_new') }}">
        <button type="button" class="btn btn-default">Criar Nova</button>
    </a>
    {% endblock %}
